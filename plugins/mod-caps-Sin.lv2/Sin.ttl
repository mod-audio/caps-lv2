@prefix doap:  <http://usefulinc.com/ns/doap#>.
@prefix epp:   <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf:  <http://xmlns.com/foaf/0.1/>.
@prefix lv2:   <http://lv2plug.in/ns/lv2core#>.
@prefix mod:   <http://moddevices.com/ns/mod#>.
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#>.
@prefix units: <http://lv2plug.in/ns/extensions/units#>.

<http://moddevices.com/plugins/caps/Sin>
a lv2:OscillatorPlugin, lv2:Plugin;
lv2:microVersion 24;
lv2:minorVersion 9;
lv2:optionalFeature lv2:hardRTCapable;
mod:brand "CAPS";
mod:label "Sin";

rdfs:comment """
The old friend, indispensable for testing and tuning.

source: http://quitte.de/dsp/caps.html#Sin
""";

lv2:port
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 0;
    lv2:default 440.0;
    lv2:maximum 20000.0;
    lv2:minimum 0.0001;
    lv2:name "Frequency";
    lv2:symbol "freq";
    lv2:portProperty epp:logarithmic;
    units:unit units:hz;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 1;
    lv2:default 0.5;
    lv2:maximum 1;
    lv2:minimum 0.000001;
    lv2:name "Volume";
    lv2:symbol "volume";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 2;
    lv2:name "Out";
    lv2:symbol "out";
];

doap:license <http://usefulinc.com/doap/licenses/gpl>;

doap:developer [
    foaf:homepage <http://quitte.de/dsp/caps.html>;
    foaf:mbox <mailto:tim@quitte.de>;
    foaf:name "Tim Goetze";
];

doap:maintainer [
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
    foaf:name "MOD Team";
];

doap:name "C* Sin - Sine wave generator".
