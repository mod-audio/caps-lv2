@prefix doap:  <http://usefulinc.com/ns/doap#>.
@prefix foaf:  <http://xmlns.com/foaf/0.1/>.
@prefix lv2:   <http://lv2plug.in/ns/lv2core#>.
@prefix mod:   <http://moddevices.com/ns/mod#>.
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#>.
@prefix units: <http://lv2plug.in/ns/extensions/units#>.

<http://moddevices.com/plugins/caps/CompressX2>
a lv2:CompressorPlugin, lv2:Plugin;
lv2:microVersion 24;
lv2:minorVersion 9;
lv2:optionalFeature lv2:hardRTCapable;
mod:brand "CAPS";
mod:label "CompressX2";

rdfs:comment """
This stereo version of Compress applies uniform compression to both channels in proportion to their combined power.

source: http://quitte.de/dsp/caps.html#Compress
""";

lv2:port
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 0;
    lv2:default 1;
    lv2:maximum 1;
    lv2:minimum 0;
    lv2:name "Measure";
    lv2:symbol "measure";
    lv2:portProperty lv2:enumeration, lv2:integer;
    lv2:scalePoint
    [
        rdfs:label "peak";
        rdf:value 0;
    ],
    [
        rdfs:label "rms";
        rdf:value 1;
    ];
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 1;
    lv2:default 1;
    lv2:maximum 2;
    lv2:minimum 0;
    lv2:name "Mode";
    lv2:symbol "mode";
    lv2:portProperty lv2:enumeration, lv2:integer;
    lv2:scalePoint
    [
        rdfs:label "linear";
        rdf:value 0;
    ],
    [
        rdfs:label "saturating 2x";
        rdf:value 1;
    ],
    [
        rdfs:label "saturating 4x";
        rdf:value 2;
    ];
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:default 0.5;
    lv2:maximum 1.0;
    lv2:minimum 0.0;
    lv2:name "Threshold";
    lv2:symbol "threshold" ],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:default 0.25;
    lv2:maximum 1.0;
    lv2:minimum 0.0;
    lv2:name "Strength";
    lv2:symbol "strength";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:default 0.75;
    lv2:maximum 1.0;
    lv2:minimum 0.0;
    lv2:name "Attack";
    lv2:symbol "attack";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 5;
    lv2:default 0.50;
    lv2:maximum 1.0;
    lv2:minimum 0.0;
    lv2:name "Release";
    lv2:symbol "release";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:default 3.0;
    lv2:maximum 18.0;
    lv2:minimum -12.0;
    lv2:name "Gain";
    lv2:symbol "gain";
    units:unit units:db;
],
[
    a lv2:ControlPort, lv2:OutputPort;
    lv2:index 7;
    lv2:default 0.0;
    lv2:maximum 0.0;
    lv2:minimum -144.0;
    lv2:name "State";
    lv2:symbol "state";
    units:unit units:db;
],
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 8;
    lv2:name "In Left";
    lv2:symbol "in_l";
],
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 9;
    lv2:name "In Right";
    lv2:symbol "in_r";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 10;
    lv2:name "Out Left";
    lv2:symbol "out_l";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 11;
    lv2:name "Out Right";
    lv2:symbol "out_r";
];

